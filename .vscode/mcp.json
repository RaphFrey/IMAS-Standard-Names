{
  "servers": {
    "imas": {
      "url": "https://imas-dd.iter.org/mcp",
      "type": "http"
    },
    "imas-debug": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--active",
        "imas-mcp",
        "--no-rich",
      ]
    },
    "imas-sn": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--active",
        "standard-names-mcp",
        "--log-level",
        "DEBUG",
      ]
    },
  }
}